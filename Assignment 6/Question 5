#include <iostream>
using namespace std;

class Node {
public:
    int data;
    Node* next;
    Node(int val) {
        data = val;
        next = NULL;
    }
};

int main() {
    int n;
    cout << "Enter number of nodes: ";
    cin >> n;

    Node* head = NULL;
    Node* tail = NULL;

    cout << "Enter node values: ";
    for (int i = 0; i < n; i++) {
        int val;
        cin >> val;
        Node* newNode = new Node(val);
        if (head == NULL) {
            head = tail = newNode;
        } else {
            tail->next = newNode;
            tail = newNode;
        }
    }

    char choice;
    cout << "Do you want to make the list circular? (y/n): ";
    cin >> choice;
    if (choice == 'y' || choice == 'Y')
        tail->next = head;

    Node* temp = head;
    bool circular = false;
    while (temp != NULL) {
        temp = temp->next;
        if (temp == head) {
            circular = true;
            break;
        }
    }

    if (circular)
        cout << "The linked list is circular.";
    else
        cout << "The linked list is not circular.";

    return 0;
}
